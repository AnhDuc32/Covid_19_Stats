<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1_top_left_and_right"
        android:gravity="center"
        android:padding="12dp"
        android:text="Cough"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A reflex action to clear the throat or airways of irritants, mucus,
        or foreign particles. It can be dry (no mucus) or productive (with mucus)."
        android:textSize="16dp" />


</LinearLayout>
